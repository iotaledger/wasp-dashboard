{
    "name": "wasp-dashboard",
    "description": "Dashboard for Nodes",
    "version": "2.0.0-rc.1",
    "author": "Martyn Janes <martyn.janes@iota.org>",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/wasp-dashboard"
    },
    "homepage": "/wasp/dashboard",
    "license": "MIT",
    "dependencies": {
        "@iota/iota.js": "^2.0.0-rc.1",
        "classnames": "^2.3.2",
        "humanize-duration": "^3.27.3",
        "moment": "^2.29.4",
        "react": "^18.2.0",
        "react-content-loader": "^6.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.4.5",
        "vivagraphjs": "^0.12.0",
        "zxcvbn": "^4.4.2"
    },
    "engines": {
        "node": ">=14 <=18.15.1"
    },
    "scripts": {
        "start": "cross-env PORT=9090 REACT_APP_BRAND_ID=wasp craco start",
        "start-bee": "cross-env PORT=9090 REACT_APP_BRAND_ID=bee craco start",
        "lint": "eslint src --ext .tsx,.ts",
        "sass-lint": "stylelint ./src/**/*.scss --custom-syntax postcss-scss",
        "build-internal": "SKIP_PREFLIGHT_CHECK=true NODE_ENV=development craco build",
        "build": "cross-env REACT_APP_BRAND_ID=wasp run-s lint sass-lint build-internal",
        "build-bee": "cross-env REACT_APP_BRAND_ID=bee run-s lint sass-lint build-internal",
        "test": "craco test",
        "eject": "react-scripts eject",
        "prepare": "husky install",
        "format": "prettier --write \"./**/*.{tsx,ts,css}\" && eslint src --fix --ext .tsx,.ts && stylelint ./src/**/*.scss --fix --custom-syntax postcss-scss"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "@craco/craco": "^7.0.0",
        "@types/classnames": "^2.3.1",
        "@types/humanize-duration": "^3.27.1",
        "@types/node": "^18.11.15",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.9",
        "@types/react-helmet": "^6.1.6",
        "@types/react-router-dom": "^5.3.3",
        "@types/zxcvbn": "^4.4.1",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "buffer": "^6.0.3",
        "cross-env": "^7.0.3",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.6.4",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-unicorn": "^45.0.2",
        "husky": ">=8",
        "lint-staged": ">=13",
        "npm-run-all": "^4.1.5",
        "postcss-scss": "^4.0.6",
        "prettier": "^2.8.1",
        "react-scripts": "^5.0.1",
        "sass": "^1.56.2",
        "stylelint": "^14.16.0",
        "stylelint-config-prettier": "^9.0.4",
        "stylelint-config-property-sort-order-smacss": "^9.0.0",
        "stylelint-config-recommended": "^9.0.0",
        "stylelint-config-recommended-scss": "8.0.0",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-scss": "^4.3.0",
        "typescript": "^4.9.4"
    },
    "overrides": {
        "@svgr/webpack": "^6.3.1"
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --cache --fix"
        ],
        "*.css": [
            "prettier --write"
        ]
    }
}